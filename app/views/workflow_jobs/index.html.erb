<p id="notice"><%= notice %></p>

<h1>Workflow Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Runner</th>
      <th>Labels</th>
      <th>Minutes</th>
      <th>Workflow name</th>
      <th>Repo</th>
      <th>Org</th>
      <th>Sender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_jobs.each do |workflow_job| %>
      <tr>
        <td><%= workflow_job.status %></td>
        <td><%= workflow_job.runner_id %></td>
        <td><%= workflow_job.labels %></td>
        <td><%= workflow_job.minutes %></td>
        <td><%= workflow_job.workflow_name %></td>
        <td><%= workflow_job.repo %></td>
        <td><%= workflow_job.org %></td>
        <td><%= workflow_job.sender %></td>
        <td><%= link_to 'Show', workflow_job %></td>
        <td><%= link_to 'Edit', edit_workflow_job_path(workflow_job) %></td>
        <td><%= link_to 'Destroy', workflow_job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

